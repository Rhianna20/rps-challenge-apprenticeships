<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<div class="card" style="width: 50rem;">
<h1 class="text-primary"> Helloo <%= @start.playername %> enjoy the game!</h1>

<h3>Pick a weapon!</h3>
<form action="/play_game" method="post">
    <input type="submit" class="btn btn-warning btn-lg white-link" name="shape" value="Rock">
    <input type="submit" class="btn btn-warning btn-lg text-white-link" name="shape" value="Paper">
    <input type="submit" class="btn btn-warning btn-lg text-white-link" name="shape" value="Scissors">
<form>
<br>


<%= @start.playername %> chooses 
 <%= @start.playerchoice %>
     <br>
    <br>
    <div id="computer">
        Cbot chooses <%= @start.computer_choice.to_s.capitalize %> 
    </div>
  
    <% if @start.win? %>
    <p class="text-success">  You win! </p>
    <% elsif @start.lose? %>
      <p class="text-danger">  You lose! </p>
    <% elsif @start.draw? %>
       <p class="text-warning"> It's a draw! </p>
    <% end %>

    </div>